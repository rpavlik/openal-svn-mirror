CC        = @CC@
CCFLAGS   = @CFLAGS@
DEFINES   = @DEFINES@
INC       = -I.
SLIB      = libjlib.a
OBJS      = globals.o  hash.o
RANLIB    = @RANLIB@

.SUFFIXES: .c
.c.o:
	$(CC) $(CCFLAGS) $(DEFINES) $(INC) -g -c -o $@ $<

all: $(SLIB)

$(SLIB): $(OBJS)
	ar cru $(SLIB) $(OBJS)
	$(RANLIB) $(SLIB)

install: all

clean:
	-rm -f $(SLIB) $(OBJS) core

distclean: clean
	-rm -f Makefile
